<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout_new_stats"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RelativeLayout_new_Stats"
       >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Match"
            android:id="@+id/textMatch"
            android:layout_marginTop="67dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3 Points"
            android:id="@+id/textTeamA"
            android:layout_marginTop="65dp"
            android:layout_below="@+id/textMatch"
            android:layout_toLeftOf="@+id/textMatch"
            android:layout_toStartOf="@+id/textMatch" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTeamA"
            android:layout_alignTop="@+id/textTeamA"
            android:layout_alignRight="@+id/buttonErase"
            android:layout_alignEnd="@+id/buttonErase" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2 Points"
            android:id="@+id/textTeamB"
            android:layout_below="@+id/editTeamA"
            android:layout_alignRight="@+id/textTeamA"
            android:layout_alignEnd="@+id/textTeamA" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTeamB"
            android:layout_alignTop="@+id/textTeamB"
            android:layout_alignLeft="@+id/editTeamA"
            android:layout_alignStart="@+id/editTeamA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dunks"
            android:id="@+id/textCity"
            android:layout_below="@+id/editTeamB"
            android:layout_alignLeft="@+id/textTeamA"
            android:layout_alignStart="@+id/textTeamA" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editCity"
            android:layout_alignTop="@+id/textCity"
            android:layout_alignLeft="@+id/editTeamB"
            android:layout_alignStart="@+id/editTeamB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fautes"
            android:id="@+id/textFAUTES"
            android:layout_alignTop="@+id/editFAUTES"
            android:layout_alignLeft="@+id/textCity"
            android:layout_alignStart="@+id/textCity" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editFAUTES"
            android:layout_below="@+id/editCity"
            android:layout_alignLeft="@+id/editCity"
            android:layout_alignStart="@+id/editCity" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Stats"
            android:id="@+id/buttonSave"
            android:layout_below="@+id/editCity"
            android:layout_alignLeft="@+id/textCity"
            android:layout_alignStart="@+id/textCity"
            android:layout_marginTop="45dp"
            android:onClick="saveStats" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erase"
            android:id="@+id/buttonErase"
            android:layout_alignTop="@+id/buttonSave"
            android:layout_toRightOf="@+id/buttonSave"
            android:layout_toEndOf="@+id/buttonSave"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:onClick="erase" />

    </RelativeLayout>

    <include layout="@layout/app_bar_other"></include>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_new_stats"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
    

    
    
</android.support.v4.widget.DrawerLayout>